<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.beats.epic.epicsoundboard.MainActivity">

    <GridLayout android:id="@+id/soundBoardGrid"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="3"
        android:layout_weight="1">
        <!-- Sound buttons -->
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button android:id="@+id/recButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
            android:text="REC"
            android:visibility="visible"/>
        <Button android:id="@+id/playButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
            android:text="Play"
            android:visibility="gone"/>
        <Button android:id="@+id/stopButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_stop_black_24dp"
            android:text="STOP"
            android:visibility="gone"/>
        <Button
            android:id="@+id/clearButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_cancel_black_24dp"
            android:text="Clear"
            android:visibility="gone"/>
        <Button android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_check_black_24dp"
            android:text="OK"
            android:visibility="gone"/>
        <Button android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_clear_black_24dp"
            android:text="Cancel"
            android:visibility="gone"/>
        <Button android:id="@+id/micButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Record"
            android:visibility="gone"/>
        <Button
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:text="Add sound"/>
    </LinearLayout>

</LinearLayout>
